@model MecanicaBeneteli.ViewModel.PecaViewModel

@{
    Layout = null;
}

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#7C7AEC">

    <link href="~/dist/css/style.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

@{
    ViewData["Title"] = "Alterar Peças";
}

<div class="container mt-4">
        <h2>Alterar Peças</h2>
        @if (ViewData["Sucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["Sucesso"]
            </div>
        }
    <form asp-controller="Menu" asp-action="AlterarPeca" method="post">
        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="Marca" class="form-label">Marca</label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="Modelo" class="form-label">Modelo</label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="Ano" class="form-label">Ano</label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="Preco" class="form-label">Preco</label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
        </div>
        <div class="mb-3">
                <label asp-for="Quantidade" class="form-label">Quantidade</label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
            <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Id" />
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Alterar</button>
                <a asp-controller="Menu" asp-action="GerenciarPecas" title="Voltar para o gerenciamento de peças" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
    </form>
</div>

    <!-- Inclua os scripts do Bootstrap (opcional, caso utilize funcionalidades que dependam de JavaScript) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>