@model MecanicaBeneteli.ViewModel.PecaViewModel

@{
    Layout = null;
}

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#7C7AEC">

    <link href="~/dist/css/style.css" rel="stylesheet" asp-append-version="true" />

</head>
<body>

    <!-- Cabeçalho -->
    <header class="bg-primary text-white py-3">
        <div class="container">
            <h1 class="h4 mb-0">Cadastro de Peças</h1>
        </div>
    </header>

    <!-- Conteúdo Principal -->
    <div class="container mt-4">
        <!-- Formulário de Cadastro de Peças -->
        @if (ViewData["Sucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["Sucesso"]
            </div>
        }
        <form asp-controller="Menu" asp-action="CadastrarPeca" method="post">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input asp-for="Nome" type="text" class="form-control" id="nome" placeholder="Digite o nome da peça" required>
            </div>
            <div class="form-group">
                <label for="marca">Marca:</label>
                <input asp-for="Marca" type="text" class="form-control" id="marca" placeholder="Digite a marca da peça" required>
            </div>
            <div class="form-group">
                <label for="modelo">Modelo:</label>
                <input asp-for="Modelo" type="text" class="form-control" id="modelo" placeholder="Digite o modelo da peça" required>
            </div>
            <div class="form-group">
                <label for="ano">Ano:</label>
                <input asp-for="Ano" type="text" class="form-control" id="ano" placeholder="Digite o ano da peça">
            </div>
            <div class="form-group">
                <label for="preco">Preço:</label>
                <input asp-for ="Preco" type="text" class="form-control" id="preco" placeholder="Digite o preço da peça" required>
            </div>
            <div class="form-group">
                <label for="quantidade">Quantidade em Estoque:</label>
                <input asp-for="Quantidade" type="text" class="form-control" id="quantidade" placeholder="Digite a quantidade em estoque da peça" required>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.ValidationSummary()
                </div>
            }
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Cadastrar Peça</button>
                <a asp-controller="Menu" asp-action="GerenciarPecas" title="Voltar para o gerenciamento de peças" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
            

            
        </form>
    </div>

    
</body>
</html>
