@model List<MecanicaBeneteli.ViewModel.PecaViewModel>

@{
    Layout = null;
}

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#7C7AEC">

    <link href="~/dist/css/style.css" rel="stylesheet" asp-append-version="true" />

</head>

<body>

    <!-- Cabeçalho -->
    <header class="bg-primary text-white py-3">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <h1 class="h4 mb-0">Bem-vindo, Tiago Beneteli</h1>
                </div>
                <div class="col-auto">
                    <a asp-controller="Home" asp-action="Index" title="Clique para Sair" class="btn btn-light">
                        <i class="mdi mdi-logout mr-2"></i> Sair
                    </a>
                </div>
            </div>
        </div>
    </header>


    <div class="container mt-4">

        <div class="mb-3">
            <a asp-controller="Menu" asp-action="CadastrarPecasInicio" type="button" class="btn btn-primary">Incluir Peça</a>

        </div>


        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Ano</th>
                    <th>Preco</th>
                    <th>Quantidade</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var peca in Model)
                {
                    <tr>
                        <td>@peca.Nome</td>
                        <td>@peca.Marca</td>
                        <td>@peca.Modelo</td>
                        <td>@peca.Ano</td>
                        <td>@peca.Preco</td>
                        <td>@peca.Quantidade</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
