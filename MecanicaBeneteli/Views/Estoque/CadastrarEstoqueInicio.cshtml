@model MecanicaBeneteli.ViewModel.UsuarioViewModel

@{
    Layout = null;
}

<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="-1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
    <link rel="manifest" href="~/site.webmanifest">
    <link rel="mask-icon" href="~/safari-pinned-tab.svg" color="#7C7AEC">

    <link href="~/dist/css/style.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Cadastro de Usuário</div>
                    <div class="card-body">
                        @if (ViewData["Sucesso"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewData["Sucesso"]
                            </div>
                        }
                        <form asp-action="CadastrarSucesso" asp-controller="Usuario" autocomplete="off"
                              id="form-inicio-consulta" method="post" class="needs-validation">
                            <div class="mb-3">
                                <label for="nome" class="form-label">Nome:</label>
                                <input asp-for="Nome" autocomplete="off" type="text" class="form-control" id="nome" placeholder="Digite seu nome" required title="Por favor, preencha o Nome">
                            </div>
                            <div class="mb-3">
                                <label for="cpf" class="form-label">CPF:</label>
                                <input asp-for="CPF" autocomplete="off" type="text" class="form-control" id="cpf" maxlength="11" placeholder="Digite seu CPF" required title="Por favor, preencha o CPF">
                            </div>
                            <div class="mb-3">
                                <label for="usuario" autocomplete="off" class="form-label">Usuário:</label>
                                <input asp-for="IdUsuario" type="text" class="form-control" id="usuario" placeholder="Digite seu nome de usuário" required title="Por favor, preencha o Usuario">
                            </div>
                            <div class="mb-3">
                                <label for="senha" class="form-label">Senha:</label>
                                <input asp-for="Senha" type="password" class="form-control" id="senha" placeholder="Digite sua senha" required title="Por favor, preencha a senha">
                            </div>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Html.ValidationSummary()
                                </div>
                            }
                            <div class="mb-3 mt-4">
                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
                            </div>
                            
                        </form>

                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Inclua os scripts do Bootstrap (opcional, caso utilize funcionalidades que dependam de JavaScript) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>